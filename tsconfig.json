{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@app/*": ["src/*"]
      },
      "target": "ES2022",
      "module": "NodeNext",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "ts-node": {
      "esm": true
  },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  